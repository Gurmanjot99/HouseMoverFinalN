@model IEnumerable<HouseMoverFinal.Models.Service>

@{
    ViewBag.Title = "serviceList";
}

<h2>serviceList</h2>

<p>
    @Html.ActionLink("Add New Service", "Create")
</p>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Image)
        </th>
        <th>Delete</th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Image)
            </td>
            <td>
                <span class="btn btn-warning">   @Html.ActionLink("Delete", "Delete", new { id = item.id })</span>
            </td>
        </tr>
    }

</table>
